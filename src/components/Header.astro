---
import {
  DocumentPlusIcon,
  DocumentTextIcon,
  HomeIcon,
  UserGroupIcon,
} from "@heroicons/react/24/solid";

import ThemeToggle from "./ThemeToggle";
---

<header>
  <nav
    class="px-4 lg:px-6 py-2.5 mb-4 bg-gray-100 rounded-xl dark:(bg-neutral-800 text-neutral-200)"
  >
    <div
      class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
    >
      <div class="justify-between items-center w-screen flex font-semibold">
        <a
          href="/"
          class="hover:(no-underline text-blue-700 dark:(text-blue-400))"
        >
          <div class="flex items-center justify-center gap-1">
            <HomeIcon className="h-6" />
            <p
              class="hidden md:(block hover:(text-blue-700 dark:(text-blue-400)))"
            >
              Home
            </p>
          </div>
        </a>
        <a
          href="/posts"
          class="hover:(no-underline text-blue-700 dark:(text-blue-400))"
        >
          <div
            class="flex items-center justify-center gap-1 dark:(hover:text-blue-400)"
          >
            <DocumentTextIcon className="h-6" />
            <p
              class="hidden md:(block hover:(text-blue-700 dark:(text-blue-400)))"
            >
              Posts
            </p>
          </div>
        </a>
        <a
          href="/authors"
          class="hover:(no-underline text-blue-700 dark:(text-blue-400))"
        >
          <div class="flex items-center justify-center gap-1">
            <UserGroupIcon className="h-6" />
            <p
              class="hidden md:(block hover:(text-blue-700 dark:(text-blue-400)))"
            >
              Authors
            </p>
          </div>
        </a>
        <a
          href="/posts/new-post"
          class="hover:(no-underline text-blue-700 dark:(text-blue-400))"
        >
          <div class="flex items-center justify-center whitespace-nowrap gap-1">
            <DocumentPlusIcon className="h-6" />
            <p
              class="hidden md:(block hover:(text-blue-700 dark:(text-blue-400)))"
            >
              New Post
            </p>
          </div>
        </a>
        <ThemeToggle client:load />
      </div>
    </div>
  </nav>
</header>
